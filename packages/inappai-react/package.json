{
  "name": "@inappai/react",
  "version": "1.0.5",
  "description": "Beautiful, customizable AI chat component for React applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "bench": "vitest bench"
  },
  "keywords": [
    "ai",
    "react",
    "chatbot",
    "assistant",
    "openai",
    "anthropic",
    "chat-ui",
    "component"
  ],
  "author": "InAppAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/InAppAI/react.git",
    "directory": "packages/inappai-react"
  },
  "bugs": {
    "url": "https://github.com/InAppAI/react/issues"
  },
  "homepage": "https://github.com/InAppAI/react#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "react-markdown": "^9.1.0",
    "react-syntax-highlighter": "^16.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.24",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "jsdom": "^27.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  }
}
